favoriteNumber = 5;
let guess;

while (true) {
    guess = parseInt(prompt("Try to guess my favorite number:"));

    if (guess > favoriteNumber) {
        console.log("Your guess is too high. Please try again.");
    } else if (guess < favoriteNumber) {
        console.log("Your guess is too low. Please try again.");
    } else if (guess === favoriteNumber) {
        console.log("Congratulations! You guessed my favorite number.");
        break;
    } else {
        console.log("Invalid input. Please enter a number.");
    }
}
